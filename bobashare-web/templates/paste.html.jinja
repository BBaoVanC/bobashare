{% extends "base.html.jinja" %}

{% block title %}Paste{% endblock %}

{% block main %}
    <div class="paste-form-container">
        <form class="paste-form">
            <div class="paste-file">
                <label for="paste-file">File</label>
                <input type="file" id="paste-file" name="file" required>
            </div>
            <div class="paste-expiry">
                <label for="paste-expiry">Expiry</label>
                <select id="paste-expiry" name="expiry" required>
                    {% for opt in expiry_options %}
                        {% let value = opt.0.num_seconds() %}
                        {% let label = opt.0|roughduration %}
                        {% let default = opt.1 %}
                        <option value="{{ value }}s" {% if default %}selected{% endif %}>{{ label }}</option>
                    {% endfor %}
                    {% if never_expiry_allowed %}
                        <option value="0">Never</option>
                    {% endif %}
                </select>
            </div>
            <div class="paste-submit">
                <input type="submit" value="Create paste">
            </div>
        </form>
    </div>
{% endblock %}
